<h1>Topics</h1>
<u1>
  <% @topics.each do |topic| %>
    <li>
      <%= link_to topic.title, topics_show_path(topic.id) %>
      <%= link_to '[Delete]', topic_delete_path(topic.id), method: :delete, data: {confirm: "Delete OK?"} %>
    </li>
  <% end %>
</u1>

<h1>Add Topic</h1>
<%= form_for @newTopic, :url => {:action => 'create'} do |f| %>
  <%= f.text_field :title %>
  <%= f.submit %>
<% end %>

